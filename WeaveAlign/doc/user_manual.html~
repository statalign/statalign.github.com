<h2>The graphical interface panels</h2>
	[ <a href="#sequences">Sequences</a> ]
	[ <a href="#alignment">Alignment</a> ]
	[ <a href="#loglikelihood">LogLikelihood</a> ]
	[ <a href="#mpd">MPD</a> ]
